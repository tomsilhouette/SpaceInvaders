<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpaceInvaders.Views.HighScores.HighScoresPage"
             xmlns:viewModels="clr-namespace:SpaceInvaders.ViewModel"
             Title="High Scores">
    <ContentPage.BindingContext>
        <viewModels:HighScoresViewModel />
    </ContentPage.BindingContext>
    
    <VerticalStackLayout>
        
        <Label 
            Text="High Scores"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="38"
            FontAttributes="Bold"
            Margin="0,20,0,20"/>

        <StackLayout x:Name="HighScoreListView"
                     HorizontalOptions="Center" Spacing="10">
            
        </StackLayout>
        
        <Button
                x:Name="GoBackToMain"
                Text="&#xe72b;    Go Back"
                Margin="0,25,0,0"
                FontFamily="Segoe Fluent Icons"
                SemanticProperties.Hint="Navigate back"
                Clicked="GoBackToMain_Clicked"
                HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>